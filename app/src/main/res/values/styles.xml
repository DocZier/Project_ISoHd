<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="colored_checkBox" parent="Base.Theme.KR">
        <item name="colorAccent">@color/light_marine</item>
        <item name="android:textColorSecondary">@color/light_olive</item>
    </style>

    <style name="SpecTextStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/light_marine</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MainTextStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/light_marine</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/light_marine</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:backgroundTint">@color/light_olive</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/light_marine</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:spacing">0dp</item>
    </style>

    <style name="ImageSpecsButtonStyle" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="android:backgroundTint">@color/light_marine</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="MainEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/light_marine</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="HiddenEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/light_marine</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="backgroundTint">@color/light_olive</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColorHint">@color/light_marine</item>
        <item name="hintTextColor">@color/light_marine</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxStrokeColor">@color/textinput_bg_color</item>
        <item name="boxStrokeWidthFocused">3dp</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/light_olive</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/light_marine</item>
        <item name="itemIconTint">@color/main_button_bg_color</item>
        <item name="itemTextColor">@color/color_item_bottom_nav</item>
    </style>
</resources>