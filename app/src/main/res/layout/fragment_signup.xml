<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragment.LoginFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottomsheet_bg"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Регистрация"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/light_olive"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/username_signup"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Имя пользователя"
                android:textColorHint="@color/dark_peach"
                android:padding="8dp"
                android:textColor="@color/light_olive"
                android:layout_marginTop="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/email_signup"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Почта"
                android:textColorHint="@color/dark_peach"
                android:padding="8dp"
                android:textColor="@color/light_olive"
                android:layout_marginTop="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/password_signup"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Пароль"
                android:textColorHint="@color/dark_peach"
                android:padding="8dp"
                android:inputType="textPassword"
                android:textColor="@color/light_olive"
                android:layout_marginTop="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/password_signup_copy"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Повторите пароль"
                android:textColorHint="@color/dark_peach"
                android:padding="8dp"
                android:inputType="textPassword"
                android:textColor="@color/light_olive"
                android:layout_marginTop="20dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/signupButton"
                android:text="Зарегистрироваться"
                android:textColor="@color/light_marine"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/light_olive"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Войти в аккаунт"
        android:textSize="14sp"
        android:textAlignment="center"
        android:id="@+id/loginText"
        android:textColor="@color/light_marine"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:textSize="14sp"
        android:textAlignment="center"
        android:id="@+id/returnText"
        android:textColor="@color/light_marine"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
