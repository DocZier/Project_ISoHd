<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.InfoFragment"
    android:background="@color/light_olive"
    android:gravity="center">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                style="@style/TitleTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Основные характеристики"
                android:paddingBottom="8dp" />

            <TextView
                style="@style/TitleTextStyle"
                android:id="@+id/capacityTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Объём"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/capacity_annotation"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/capacity_first"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/capacity_second"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/capacity_third"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />


            <TextView
                style="@style/TitleTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Интерфейс"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/interface_annotation"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/interface_first"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/interface_second"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/interface_third"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />

            <TextView
                style="@style/TitleTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Форм-фактор"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/formfactor_annotation"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/formfactor_first"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/formfactor_second"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />

            <TextView
                style="@style/TitleTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Скорость вращения шпинделя"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/speed_annotation"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/speed_first"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/speed_second"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/speed_third"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/speed_third"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/speed_forth"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="30dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabScrollToTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:alpha="0.5"
        android:src="@android:drawable/ic_menu_upload"
        android:backgroundTint="@color/light_marine"
        android:contentDescription="Вверх" />

</FrameLayout>