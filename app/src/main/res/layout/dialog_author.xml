<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_bg"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottomsheet_item_bg"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                style="@style/TitleTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="О проекте"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"/>

            <TextView
                style="@style/MainTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Данный проект является учебным. Он был разработан в качестве Курсового Проекта по предмету ''Разработка мобильных приложений''. Автором является студент РТУ МИРЭА группы ИКБО-06-22 Волков А.Э" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="20dp"
                android:gravity="center"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="20dp"
                    android:layout_marginHorizontal="10dp">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/author"
                    />
                </androidx.cardview.widget.CardView>
                <TextView
                    style="@style/SpecTextStyle"
                    android:id="@+id/profile_link_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DocZier"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <TextView
                style="@style/SpecTextStyle"
                android:id="@+id/link_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ссылка на проект"
                android:textAlignment="center"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>