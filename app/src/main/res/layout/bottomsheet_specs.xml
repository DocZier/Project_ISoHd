<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bottomsheet_bg"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="10"
        android:paddingTop="15dp">

        <ImageButton
            android:id="@+id/act_add_favorite"
            style="@style/ImageSpecsButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_bookmark_add"
            />

        <EditText
            android:id="@+id/edit_modelname"
            style="@style/HiddenEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="IAUSDY2r74687124y412536"
            android:textAllCaps="true"
            android:enabled="false"/>

        <ImageButton
            android:id="@+id/act_edit"
            style="@style/ImageSpecsButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_edit_on"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="15dp">

        <TextView
            style="@style/MainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Объём (ГБ):"
            android:layout_weight="1"/>


        <EditText
            android:id="@+id/edit_capacity"
            style="@style/HiddenEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28000 GB"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:enabled="false"
            android:background="@drawable/bottomsheet_specs_bg"
            android:inputType="number"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp">

        <TextView
            style="@style/MainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Интерфейс:"
            android:layout_weight="1"/>


        <EditText
            android:id="@+id/edit_interface"
            style="@style/HiddenEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SATA 3.0"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:enabled="false"
            android:background="@drawable/bottomsheet_specs_bg"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp">

        <TextView
            style="@style/MainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Производитель:"
            android:layout_weight="1"/>


        <EditText
            android:id="@+id/edit_manufactor"
            style="@style/HiddenEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seagate"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:enabled="false"
            android:background="@drawable/bottomsheet_specs_bg"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp">

        <TextView
            style="@style/MainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Форм-фактор:"
            android:layout_weight="1"/>


        <EditText
            android:id="@+id/edit_formfactor"
            android:inputType="number"
            style="@style/HiddenEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.5"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:enabled="false"
            android:background="@drawable/bottomsheet_specs_bg"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp">

        <TextView
            style="@style/MainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Скорость вращения:"
            android:layout_weight="1"/>


        <EditText
            android:id="@+id/edit_speed"
            style="@style/HiddenEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13500"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:enabled="false"
            android:background="@drawable/bottomsheet_specs_bg"
            android:inputType="number"
            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/act_save"
        android:text="Применить"
        android:textColor="@color/light_marine"
        android:backgroundTint="@color/light_olive"
        app:strokeWidth="2dp"
        app:strokeColor="@color/light_marine"
        app:cornerRadius="8dp"
        android:textSize="20dp"
        android:layout_weight="1"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/act_clear"
        android:text="Сбросить"
        android:textColor="@color/light_marine"
        android:backgroundTint="@color/light_olive"
        app:strokeWidth="2dp"
        app:strokeColor="@color/light_marine"
        app:cornerRadius="8dp"
        android:textSize="20dp"
        android:layout_weight="1"
        android:visibility="gone"
        />

</LinearLayout>